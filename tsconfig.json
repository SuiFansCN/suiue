{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "lib/*"
            ],
            // for demo
            "@@/*": [
                "demo/*"
            ],
            "vue-sui-dapp-kit": [
                "lib/index.ts"
            ],
            "vue-sui-dapp-kit/*": [
                "lib/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.vue",
        "**/*.tsx",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
